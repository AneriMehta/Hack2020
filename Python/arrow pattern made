n=int(input())
for i in range(1,n+1):
    if i<=n//2:
        for spaces in range(2,i+1):
            print(' ',end=" ")
        for star1 in range(1,i+1):
            print('*',end="")
        print() 
    else:
        for spaces in range(n-i,0,-1):
            print(' ',end=" ")
        for star2 in range(n-i,-1,-1):
            print('*',end="")
        print()
